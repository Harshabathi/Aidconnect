<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>AidConnect - Join Our Community</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Quicksand:wght@300..700&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-color: #f3f7fc;
        }

        .form-section {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            display: inline-block;
        }

        .icon-donor {
            color: #2563eb;
        }

        .icon-aid {
            color: #22c55e;
        }

        @media (max-width: 576px) {
            .form-section {
                padding: 1rem !important;
                margin: 1.5rem 0 !important;
                border-radius: 10px;
                width: 100%;
                min-width: 0;
            }
            .radiogroup {
                flex-direction: column !important;
                gap: 0.5rem !important;
            }
            .form-check {
                width: 100% !important;
                justify-content: flex-start !important;
            }
        }
    </style>
</head>

<body>

    <% if (success && success.length > 0) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
    <div class="container py-5">

        <div class="text-center mb-4">
            <h2 class="fw-bold mb-1">Join Our Community</h2>
            <p class="text-muted fs-5">Connect with others to give and receive aid during difficult times</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 form-section">


                <h3>Create your account</h2>
                    <p class="text-muted">Fill in your details</p>

                    <form action="/users/register" method="post" class="needs-validation" novalidate>

                        <lable for="form-box"> I want to:</lable>
                        <div class="radiogroup d-flex justify-content-between gap-3 mt-3" id="form-box">
                            <div class="form-check w-50 border d-flex align-items-center gap-2 p-3 rounded ">
                                <div class="form-check">
                                    <input class="form-check-input " type="radio" value="donor" name="user[role]"
                                        id="role-donar">
                                    <label class="form-check-label " for="role-donar">
                                        <i class="fa-solid fa-hand-holding-heart icon-donor"></i>&nbsp;&nbsp;Offer aid
                                    </label>
                                </div>
                            </div>
                            <div class="form-check w-50 border p-3 rounded d-flex align-items-center gap-2 ">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" value="recipient" name="user[role]"
                                        id="role-recipient" checked>
                                    <label class="form-check-label " for="role-recipient">
                                        <i class="fa-solid fa-users icon-aid"></i>&nbsp;&nbsp;Seek aid
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" placeholder="John Doe" name="user[username]" required>
                            <div class="valid-feedback">Good to go</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="john@example.com" name="user[email]"
                                required>
                            <div class="invalid-feedback">Enter valid email</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" placeholder="+1 (555) 123-4567" name="user[phoneno]"
                                required>
                            <div class="invalid-feedback">Enter valid contact no</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" id="loclabel">Pickup Location</label>
                            <input type="text" class="form-control" placeholder="Your City" name="user[location]"
                                required>
                            <div class="invalid-feedback">Enter valid contact no</div>
                        </div>

                        <div class="col mb-3">
                            <label for="category" id="category-label" class="form-label">Primary aid type you can
                                provide</label>
                            <select class="form-select" aria-label="Default select example" id="category"
                                name="user[help]" required>
                                <option value="" disabled selected hidden>Select primary aid type</option>
                                <option value="Food">Food</option>
                                <option value="Clothing">Clothing</option>
                                <option value="Medical">Medical</option>
                                <option value="Baby Care">Baby Care</option>
                                <option value="Education">Education</option>

                            </select>
                            <div class="invalid-feedback">Select an option</div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" name="user[password]" required>
                                    <div class="invalid-feedback">Enter strong password</div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" name="user[repeat_password]" required>
                                    <div class="invalid-feedback">Enter strong password</div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark btn-primary w-100">&nbsp;&nbsp;Create account</button>
                    </form>
            </div>
        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const donorRadio = document.getElementById('role-donar');
            const recipientRadio = document.getElementById('role-recipient');
            const categoryLabel = document.getElementById('category-label');
            const categorySelect = document.getElementById('category');
            const loclabel = document.getElementById("loclabel");

            function updateLabel() {
                if (donorRadio.checked) {
                    categoryLabel.textContent = "Primary aid type you can provide";
                    categorySelect.options[0].text = "Select primary aid type";
                    loclabel.textContent = "Pickup location"
                } else if (recipientRadio.checked) {
                    categoryLabel.textContent = "Most urgent aid you need";
                    categorySelect.options[0].text = "Select urgent need";
                    loclabel.textContent = "Current location";
                }
            }

            donorRadio.addEventListener('change', updateLabel);
            recipientRadio.addEventListener('change', updateLabel);

            updateLabel();
        });
    </script>

    <script>
        (() => {
            'use strict';

            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>


</body>

</html>